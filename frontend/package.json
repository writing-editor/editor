{
  "name": "editor-app",
  "version": "3.0.1",
  "type": "module",
  "main": "electron.cjs",
  "description": "A simple and powerful editor for writers and researchers.",
  "author": {
    "name": "Majeed Baloch",
    "email": "abdulmajeedkhurasani@gmail.com"
  },
  "homepage": "https://github.com/writing-editor/editor",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:electron": "vite build --mode electron",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"electron .\"",
    "electron:build": "npm run build:electron && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "vite": "^7.1.2",
    "vite-plugin-pwa": "^1.0.3"
  },
  "dependencies": {
    "@ditojs/tiptap-footnotes": "^3.0.0",
    "@tiptap/core": "^3.1.0",
    "@tiptap/extension-bubble-menu": "^3.1.0",
    "@tiptap/extension-character-count": "^3.1.0",
    "@tiptap/extension-floating-menu": "^3.4.1",
    "@tiptap/extension-heading": "^3.1.0",
    "@tiptap/extension-link": "^3.1.0",
    "@tiptap/extension-placeholder": "^3.1.0",
    "@tiptap/html": "^3.1.0",
    "@tiptap/starter-kit": "^3.1.0",
    "@tiptap/suggestion": "^3.4.2",
    "diff-match-patch": "^1.0.5",
    "docx": "^8.5.0",
    "electron-log": "^5.4.3",
    "electron-store": "^11.0.0",
    "file-saver": "^2.0.5",
    "flexsearch": "^0.8.205",
    "google-auth-library": "^10.3.0",
    "marked": "^16.1.2",
    "open": "^10.2.0",
    "tippy.js": "^6.3.7"
  },
  "build": {
    "appId": "com.majeedbaloch.editorapp",
    "productName": "Editor App",
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.cjs",
      "credentials.json"
    ],
    "icon": "build/icon.png",
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "maintainer": "Majeed Baloch <abdulmajeedkhurasani@gmail.com>"
    }
  }
}